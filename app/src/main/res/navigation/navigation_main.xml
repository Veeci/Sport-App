<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/mainViewPagerFragment">
    <fragment
        android:id="@+id/mainViewPagerFragment"
        android:name="com.example.sportapp.presentation.main.fragment.MainViewPagerFragment"
        android:label="MainViewPagerFragment" >
        <action
            android:id="@+id/action_mainViewPagerFragment_to_matchDetailFragment"
            app:destination="@id/matchDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchDetailFragment"
        android:name="com.example.sportapp.presentation.main.fragment.home.matchdetail.MatchDetailFragment"
        android:label="fragment_match_detail"
        tools:layout="@layout/fragment_match_detail" >
        <action
            android:id="@+id/action_matchDetailFragment3_to_mainViewPagerFragment"
            app:destination="@id/mainViewPagerFragment" />
    </fragment>
</navigation>